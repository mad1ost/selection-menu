{
  "manifest_version": 2,
  "name": "Selection Menu",
  "version": "1.0.3",
  "description": "Pop-up menu after selection",
  "applications": {
    "gecko": {
      "id": "{c3f89c61-f1ef-4f14-a7d6-49aff242663f}",
      "strict_min_version": "55.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "run_at": "document_end",
      "js": ["selection-menu.js"]
    }
  ],
  "web_accessible_resources": [
    "selection-menu.css"
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "permissions": ["storage"]
}
