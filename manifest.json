{
  "manifest_version": 2,
  "name": "Selection Menu",
  "version": "1.1.0",
  "description": "Pop-up menu after selection",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "run_at": "document_end",
      "js": ["selection-menu.js"]
    }
  ],
  "web_accessible_resources": [
    "selection-menu.css"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "storage"
  ]
}
